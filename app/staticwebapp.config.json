{
    "trailingSlash": "auto",
    "routes": [
      {
        "route": "/.auth/login/aadb2c",
        "allowedRoles": ["anonymous"] 
      },
      {
        "route": "/login",
        "redirect": "/.auth/login/aadb2c"
      },        
      {
        "route": "/profile*",
        "allowedRoles": ["authenticated"]
      },
      {
        "route": "/admin/index.html",
        "allowedRoles": ["administrator"]
      },
      {
        "route": "/images/*",
        "headers": {
          "cache-control": "must-revalidate, max-age=15770000"
        }
      },
      {
        "route": "/api/*",
        "methods": ["GET"],
        "allowedRoles": ["registeredusers"]
      },
      {
        "route": "/api/*",
        "methods": ["PUT", "POST", "PATCH", "DELETE"],
        "allowedRoles": ["administrator"]
      },
      {
        "route": "/api/*",
        "allowedRoles": ["authenticated"]
      },
      {
        "route": "/customers/contoso*",
        "allowedRoles": ["administrator", "customers_contoso"]
      },
      {
        "route": "/.auth/login/twitter",
        "statusCode": 404
      },
      {
        "route": "/logout",
        "redirect": "/.auth/logout"
      },
      {
        "route": "/calendar*",
        "rewrite": "/calendar.html"
      },
      {
        "route": "/specials",
        "redirect": "/deals",
        "statusCode": 301
      }
    ],
    "navigationFallback": {
      "rewrite": "index.html",
      "exclude": ["/images/*.{png,jpg,gif}", "/css/*"]
    },
    "responseOverrides": {
      "400": {
        "rewrite": "/invalid-invitation-error.html"
      },
      "401": {
        "redirect": "/login",
        "statusCode": 302
      },
      "403": {
        "rewrite": "/custom-forbidden-page.html"
      },
      "404": {
        "rewrite": "/404.html"
      }
    },
    "globalHeaders": {
      "content-security-policy": "default-src https: 'unsafe-eval' 'unsafe-inline'; object-src 'none'"
    },
    "mimeTypes": {
      ".json": "text/json"
    },
    "auth": {
      "identityProviders": {
        "customOpenIdConnectProviders": {
          "aadb2c": {
            "registration": {
              "clientIdSettingName": "8ec7495b-8229-4d7b-aee1-1243d38e49ee",
              "clientCredential": {
                "clientSecretSettingName": "WD~8Q~IVxyHF6ngktcaviEEvVtj3CpuAe2By2ahR"
              },
              "openIdConnectConfiguration": {
                "wellKnownOpenIdConfiguration": "https://aquaauthstage.b2clogin.com/aquaauthstage.onmicrosoft.com/B2C_1_Aqua_Static_Web_App_Testing/v2.0/.well-known/openid-configuration"
              }
            },
            "login": {
              "nameClaimType": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name",
